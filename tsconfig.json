{
  "compilerOptions": {
    /* Modules */
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    /* Output */
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    /* Additional Checks */
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "test-project", "dist"]
}
